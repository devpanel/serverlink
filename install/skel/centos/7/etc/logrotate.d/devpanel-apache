/var/log/httpd/virtwww/*/*log {
    weekly
    rotate 8
    missingok
    notifempty
    sharedscripts
    delaycompress
    postrotate
        /bin/systemctl reload httpd.service > /dev/null 2>/dev/null || true
    endscript
}

/var/log/httpd/cgi_log {
        weekly
        missingok
        rotate 4
        compress
        delaycompress
        notifempty
        create 640 root apache
}
