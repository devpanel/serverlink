#!/bin/bash

set_usage_msg \
  "Usage: $bin_name ${cmd_ar[*]} [opts] --vhost <vhost>

  Options:
    --vhost <vhost>         the vhost to backup

  Refreshes the configuration files of the specified apps, resetting
  database credentials, etc.
"

devpanel_cmd__refresh_config() {

  local name vhost
  local -a cmd_args=()

  while [ -n "$1" ]; do
    name="$1"
    case "$name" in
      --vhost)
        [ -z "$2" ] && error_missing_value vhost
        vhost="$2"
        shift 2
        ;;
      --help)
        usage
        ;;
      --[A-Za-z0-9_-]*)
        error "unknown option $name"
        ;;
      *)
        cmd_args+=( "$name" )
        shift
        ;;
    esac
  done

  [ -z "$vhost" -a $EUID -eq 0 ] && error_missing_param vhost

  if [ $EUID -eq 0 ]; then

    local user

    get_linux_username_from_vhost "$vhost"
    if ! user="$_dp_value"; then
      error "unable to get linux username for vhost $vhost"
    fi

    su -l \
      -c "$sys_dir/bin/restore-vhost-subsystem"\ "${cmd_args[*]}"\ -n "$user"
  else
    # not root, run it directly
    "$sys_dir/bin/restore-vhost-subsystem" -n
  fi
}
