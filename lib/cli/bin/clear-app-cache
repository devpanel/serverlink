#!/bin/bash

set_usage_msg \
  "Usage: $bin_name ${cmd_ar[*]} cache [opts] --vhost <vhost>

  Options:
    --vhost <vhost>             the vhost

  Clears the cache of the app on the specified vhost.
"

devpanel_cmd__clear_app_cache() {
  [ $# -eq 0 -o -z "$1" ] && usage

  local name vhost

  local -a cmd_args=()
  local -a opts_ar=( )

  while [ -n "$1" ]; do
    name="$1"
    case "$name" in
      --vhost)
        [ -z "$2" ] && error_missing_value vhost
        vhost="$2"
        shift 2
        ;;
      --help)
        usage
        ;;
      *)
        usage
        ;;
    esac
  done

  [ -z "$vhost" ] && error_missing_param vhost

  user="w_${vhost}"

  local exec_bin="$sys_dir/bin/restore-vhost-subsystem"

  su -l -c "$exec_bin -C" "$user"
}
