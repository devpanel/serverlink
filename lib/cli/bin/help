#!/bin/bash

set_usage_msg \
  "Usage: $bin_name $action --section <section>

  Displays all options related to a given section.
"

devpanel_cmd__help() {
  [ $# -eq 0 -o -z "$1" ] && usage

  local section

  while [ -n "$1" ]; do
    name="$1"
    case "$name" in
      --section)
        [ -z "$2" ] && error_missing_value section
        section="$2"
        shift 2
        ;;
      -*)
        error "unknown option -$name"
        ;;
    esac
  done

  [ -z "$section" ] && error_missing_param section

  show_help_msg "$section"
}
